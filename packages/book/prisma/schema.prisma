generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Config {
  key   String @id
  value String
}

model Book {
  id       String   @id
  name     String
  files    File[]
  docs     Doc[]
  map      String @default("[]")
  settings String?
  texts    String @default("[]")
  created  DateTime @default(now())
  updated  DateTime @updatedAt
  lasteUpdateMode String // vscode manual github gitlab
}

model File {
  id String @id @default(cuid())
  path   String
  bookId String
  name String
  book   Book   @relation(fields: [bookId], references: [id])
  @@unique([path, bookId])
}

model Doc {
  bookId  String
  book    Book     @relation(fields: [bookId], references: [id])
  path    String
  schema  String
  updated DateTime @updatedAt
  sha String

  @@id([path, bookId])
}
